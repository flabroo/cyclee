<div class="container">
  <div class="cyclee-lane cyclee-big
    <% if @avgrating.zero? %>
      <%= 'cyclee-grey' %>
    <% elsif @avgrating <= 2 %>
      <%= 'cyclee-red' %>
    <% elsif @avgrating == 3 %>
      <%= 'cyclee-yellow' %>
    <% elsif @avgrating > 3 %>
      <%= 'cyclee-green' %>
    <% end %>" %>
      <p><%= @lane.name %></p>
      <i class="fa-solid fa-angle-right fa-xl"></i>
  </div>
  <div class="form-wrap">
    <%= simple_form_for [@lane, @review] do |f| %>
      <div class="input-wrap">
        <%= f.input :rating, collection: (1..5).to_a, label: "How was your experience with this lane?", input_html: {data: {controller: "star-rating"}} %>
      </div>
      <div class="input-wrap">
        <%= f.input :comment, class: "comment" %>
      </div>
      <div class="input-wrap">
        <%= f.input :photos, as: :file, input_html: { multiple: true }, class: "upload" %>
      </div>
      <div class="input-wrap">
        <%= f.submit 'Submit', class: "btn btn-cyclee2" %>
      </div>
    <% end %>
  </div>
</div>
